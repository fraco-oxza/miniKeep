               </children>
            </VBox>
         </children>
      </HBox>
      <Label text="Colaboradores (email separados por coma)" />
      <TextField fx:id="collaboratorsInput" promptText="amigo1@g.com, amigo2@a.cl, amigo3@vv.cl ...">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER" prefHeight="43.0" prefWidth="493.0" spacing="30.0">
         <Button mnemonicParsing="false" onAction="#backHandler" text="Volver Atras" />
         <Button mnemonicParsing="false" onAction="#addHandler" text="AÃ±adir Nota" />
