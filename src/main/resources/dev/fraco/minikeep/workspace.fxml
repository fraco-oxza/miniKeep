<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.fraco.minikeep.controllers.Workspace">
    <VBox prefHeight="600.0" prefWidth="801.0" style="-fx-background-color: #323232;">
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="802.0" spacing="50.0">
            <Button mnemonicParsing="false" onAction="#moveToCreateNote" text="Crear Nueva Nota" />
            <Button mnemonicParsing="false" onAction="#moveToTheTrash" text="Abrir Papelera" />
            <Button mnemonicParsing="false" onAction="#moveToLogin" text="Cerrar Sesion" />
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
        <VBox prefHeight="60.0" prefWidth="561.0">

            <Label text="Buscar:" textFill="WHITE" />
            <TextField fx:id="searchBar" onKeyTyped="#searchHandler" />
            <VBox.margin>
                <Insets left="100.0" right="100.0" />
            </VBox.margin>
        </VBox>
        <Label text="Doble click para abrir y modificar" textFill="WHITE">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
        <TableView fx:id="notesTable" editable="true" prefHeight="516.0" prefWidth="802.0">
            <columns>
                <TableColumn fx:id="colColor" onEditStart="#startEdit" prefWidth="30.0" resizable="false" />
                <TableColumn fx:id="colHeader" onEditStart="#startEdit" prefWidth="341.10133171081543" text="Titulo" />
                <TableColumn fx:id="colTags" onEditStart="#startEdit" prefWidth="107.7161865234375" text="Tag" />
                <TableColumn fx:id="colPriority" minWidth="0.0" onEditStart="#startEdit" resizable="false" text="Prioridad" />
                <TableColumn fx:id="colCreated" minWidth="1.0" onEditStart="#startEdit" prefWidth="120.0" resizable="false" text="Creada" />
                <TableColumn fx:id="colEdited" onEditStart="#startEdit" prefWidth="120.0" resizable="false" text="Editada" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
